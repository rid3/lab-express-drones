<h2 class="titulo">Available drones</h2>

<div class="card">

{{#each oneDrone}}

<div class="card-header">
<h2>{{name}}</h2>
</div>
    <div class="card-body">

    <h4>Propellers:<p>{{propellers}}</p></h4>
    <h4>MaxSpeed:<p>{{maxSpeed}}</p></h4>

   


    <a href="/drones/{{_id}}/edit"><button class="btn btn-outline-dark">Update Drone</button></a>

    <form action="/drones/{{_id}}/delete" method="POST">
    <button class="btn btn-outline-danger">Delete Drone</button>
    </form>
    </div>
{{/each}}

</div>
